$(document).ready(function () {
  const $iframe = $('#wmg-pov-video-frame');

  $('.wmg-pov-slider')
    .on('mousedown touchstart', function () {
      $iframe.css('pointer-events', 'none'); // Prevent iframe from blocking drag
    })
    .on('mouseup touchend', function () {
      $iframe.css('pointer-events', 'auto'); // Re-enable after drag
    });
});
